<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePassword"
    android:background="@color/white">

    <TextView
        android:id="@+id/propusk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:text="Пропустить"
        android:fontFamily="@font/pro_display"
        android:textSize="15dp"
        android:textColor="#1A6FEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_createpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Создайте пароль"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp"
        android:fontFamily="@font/pro_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propusk" />

    <TextView
        android:id="@+id/text_zashitadann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:fontFamily="@font/pro_display"
        android:text="Для защиты ваших персональных данных"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_createpassword" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_zashitadann">
        <View
            android:id="@+id/point1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/point_style_blue">
        </View>
        <View
            android:id="@+id/point2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/point_style_stroke">
        </View>
        <View
            android:id="@+id/point3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/point_style_stroke">
        </View>
        <View
            android:id="@+id/point4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/point_style_stroke">
        </View>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>