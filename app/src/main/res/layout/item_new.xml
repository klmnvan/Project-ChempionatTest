<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="152dp"
        android:background="@drawable/item_blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_check_up"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pro_display"
                android:text="Чек-ап для \nмужчин"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_issled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pro_display"
                android:text="9 исследований"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_summa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/pro_display"
                android:text="8000 ₽"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:id="@+id/pictureOneBlock"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/picture1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>